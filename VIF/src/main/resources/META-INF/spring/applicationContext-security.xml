<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
	<!-- HTTP security configurations -->
	<http auto-config="true" use-expressions="true">
		<form-login login-processing-url="/resources/j_spring_security_check"
			login-page="/login" authentication-failure-url="/login?login_error=t" />
		<logout logout-url="/resources/j_spring_security_logout" logout-success-url="/login"/>
		<remember-me key="uniqueAndSecret"/>
		<!-- Configure these elements to secure URIs in your application -->
		<intercept-url pattern="/admin/**" access="isAuthenticated()" />
		<intercept-url pattern="/css/**" access="permitAll" />
    	<intercept-url pattern="/scripts/**" access="permitAll" />
    	<intercept-url pattern="/images/**" access="permitAll" />
    	<intercept-url pattern="/js/**" access="permitAll" />
    	<intercept-url pattern="/resources/**" access="permitAll" />
    	<intercept-url pattern="/api/**" access="permitAll" />
    	<intercept-url pattern="/login" access="permitAll" />
    	<intercept-url pattern="/confirm/**" access="permitAll" />
    	<intercept-url pattern="/guide/**" access="permitAll" />
    	<intercept-url pattern="/downloads/**" access="permitAll" />
		<intercept-url pattern="/services/**" access="permitAll" />
	
		<intercept-url pattern="/settings/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/version/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/plan/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER')" />
		<intercept-url pattern="/user/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER')" />
		<intercept-url pattern="/pos/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER')" />
		<intercept-url pattern="/device/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER')" />
		<intercept-url pattern="/supervise/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER', 'ROLE_SUPERVISOR')" />
		<intercept-url pattern="/report/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER')" />
		<intercept-url pattern="/goods/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER')" />
		<intercept-url pattern="/planforsales/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER')" />
		<intercept-url pattern="/testxml/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_MANAGER')" />
		<intercept-url pattern="/salestrans/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/import/**" access="hasRole('ROLE_ADMIN')" />
		
    	<intercept-url pattern="/**" access="permitAll" />
	</http>
	
	<beans:bean id="LoginUserDetailsService" class="vn.vif.daos.LoginUserDetailsService"></beans:bean>
	
	<!-- Configure Authentication mechanism -->
	<authentication-manager alias="authenticationManager">
		<authentication-provider user-service-ref="LoginUserDetailsService">
			<password-encoder hash="sha-256"/>
		</authentication-provider>
		
	</authentication-manager>
</beans:beans>